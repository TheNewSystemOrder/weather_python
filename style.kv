<WeatherCard>
    padding: 4
    size_hint:0.9, 0.8

    MDRelativeLayout:
        MDLabel:
            id: label
            text: "погода"
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
<MainScreen>:
    MDBoxLayout:
        spacing:"20sp"
        orientation: 'vertical'
        MDTopAppBar:
            title: "MDTopAppBar"
            left_action_items: [["menu", lambda x: app.callback()]] 
        MDBoxLayout:
            padding: "25sp"
            size_hint: (1,0.8)
            pos_hint:{"center_x": 0.5}
            orientation: 'vertical'
            spacing: '20sp'   
            MDBoxLayout:
                size_hint: 1, None
                height:"40sp"
                orientation: 'horizontal'
                spacing: "20sp"  
                MDTextField:
                    id: city_field
                    hint_text: "Введіть місто"
                    mode: "fill"
                MDIconButton:
                    id: search_btn
                    icon: 'maghify'
                    mb_bg_color: app.theme_cls.primary_color
                    on_press: root.weather_search()
            WeatherCard:
                id: weather_card